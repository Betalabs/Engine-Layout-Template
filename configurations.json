{
    "name": "My Theme",
    "alias": "my-theme",
    "paths": {
        "views": "src/views",
        "images": "src/assets/images",
        "scripts": "src/assets/scripts",
        "styles": "src/assets/styles",
        "fonts": "src/assets/fonts",
        "videos": "src/assets/videos"
    },
    "main_file": "base.blade.php",
    "colors": [
        {
            "identification": "pink",
            "label": "Pink",
            "default": true
        }, {
            "identification": "blue",
            "label": "Blue",
            "default": false
        }
    ],
    "components": [
        {
            "name": "My custom component",
            "description": "This is a custom component for my amazing theme",
            "path": "components",
            "main_file": "my-custom-component.blade.php",
            "parameters": [
                {
                    "name": "logo_src",
                    "label": "Logo image source",
                    "description": "Logo image source",
                    "possible_values": ["url"]
                }, {
                    "name": "categories",
                    "label": "Categories data provider",
                    "description": "This data provider should provide a collection composed by all ecommerce categories",
                    "possible_values": ["data_providers,id"]
                }, {
                    "name": "blog_url",
                    "label": "Blog link URL",
                    "description": "URL which references an external blog",
                    "possible_values": ["url"]
                }
            ]
        }
    ]
}
